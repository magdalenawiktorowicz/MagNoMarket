<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="175dp"
    android:background="@color/see_through"
    android:padding="10dp"
    tools:context="ui.midespensa.BorradoProducto">

    <TextView
        android:id="@+id/textViewConfirmacionBorrado"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="@string/mensajeConfirmacionBorradoProducto"
        android:textAppearance="@style/Text_style_borrado"
        android:textColor="@color/dark_blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.024" />

    <Button
        android:id="@+id/btnSiBorradoProducto"
        style="@style/Button"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:text="@string/si"
        android:textAppearance="@style/TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textViewConfirmacionBorrado"
        app:layout_constraintTop_toBottomOf="@+id/textViewConfirmacionBorrado"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btnNoBorradoProducto"
        style="@style/Button"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:text="@string/no"
        android:textAppearance="@style/TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textViewConfirmacionBorrado"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/btnSiBorradoProducto"
        app:layout_constraintTop_toBottomOf="@+id/textViewConfirmacionBorrado"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>