<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="styles" parent="@style/Theme.AppCompat.Light">
    </style>
    <style name="HintText">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">italic</item>
    </style>
    <style name="TextView">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:elegantTextHeight">true</item>
        <item name="android:shadowColor">@color/grey</item>
        <item name="android:shadowRadius">10</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="CustomizedSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/verde</item>
        <item name="colorSwitchThumbNormal">@color/naranja</item>
        <item name="android:colorForeground">@color/grey</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="ToastStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Button" parent="Theme.AppCompat.Light">
        <item name="android:capitalize">none</item>
    </style>
    <style name="EditTextLogin" parent="Theme.AppCompat.Light">
        <item name="android:shadowColor">@color/orange</item>
        <item name="android:shadowRadius">20</item>
    </style>
    <style name="NavView" parent="Theme.AppCompat.Light">
        <item name="itemIconTint">@color/nav_colors</item>
        <item name="itemTextColor">@color/nav_colors</item>
        <item name="android:shadowColor">@color/dark_blue</item>
        <item name="android:shadowRadius">3</item>
        <item name="android:textSize">13sp</item>
    </style>
</resources>